<script src="/controllers/control_handlers.js"></script>

<div>
    <button class="w3-button w3-block w3-black w3-left-align accordion-btn">
        New
    </button>
    <div class="w3-container w3-hide">
        {% for item in content.0 %}
            <div class="w3-card">
                <header><h4>{{ item.title }}</h4></header>
                {{ item.abstract }}
                <footer>
                    author: {{ item.author }}<br>
                    status: {{ item.status }}
                </footer>
            </div>
        {% else %}
            Sorry, nothing to put here :(
        {% endfor %}
    </div>

